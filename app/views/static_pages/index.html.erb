<h1></h1>
<div class="hathaway_rain">

<h2><span></span>
<% if session[:user] %>
	<h3>Hello <%= (user = User.find(session[:user])).name %>
	<h4><%= link_to "Signout", session_path(user), method: :delete %>
	<% else %>
	<div class="login-signup-buttons">
	<p id="error"><%= flash[:error] %></p>
	<%= link_to "Register", new_user_path, class: "button" %><br>
	<%= link_to "Log In", login_path, class: "button" %>
	<% end %>
</div>
